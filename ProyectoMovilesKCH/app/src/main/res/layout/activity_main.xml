<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Top bar -->
    <LinearLayout
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgLogo"
            android:src="@mipmap/ic_launcher"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <TextView
            android:layout_marginStart="12dp"
            android:text="@string/app_name"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <ImageButton
            android:id="@+id/btnLoginIcon"
            android:src="@android:drawable/ic_menu_manage"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/desc_login_icon"
            android:layout_width="44dp"
            android:layout_height="44dp"/>
    </LinearLayout>

    <!-- Grid content -->
    <GridLayout
        android:id="@+id/gridOptions"
        android:columnCount="2"
        android:rowCount="4"
        android:padding="16dp"
        android:layout_marginTop="72dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Each item is a simple Card-like button -->
        <LinearLayout android:id="@+id/btnAppointments"
            android:orientation="vertical"
            android:layout_margin="8dp"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="140dp"
            android:background="@drawable/option_card"
            android:gravity="center">

            <ImageView android:src="@android:drawable/ic_menu_my_calendar" android:layout_width="48dp" android:layout_height="48dp"/>
            <TextView android:text="@string/opt_reserve_appointment" android:layout_marginTop="8dp" android:layout_height="wrap_content" android:layout_width="match_parent"/>
        </LinearLayout>

        <LinearLayout android:id="@+id/btnDoctors"
            android:orientation="vertical"
            android:layout_margin="8dp"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="140dp"
            android:background="@drawable/option_card"
            android:gravity="center">

            <ImageView android:src="@android:drawable/ic_menu_agenda" android:layout_width="48dp" android:layout_height="48dp"/>
            <TextView android:text="@string/opt_my_doctors" android:layout_marginTop="8dp" android:layout_height="wrap_content" android:layout_width="match_parent"/>
        </LinearLayout>

        <LinearLayout android:id="@+id/btnProfile"
            android:orientation="vertical"
            android:layout_margin="8dp"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="140dp"
            android:background="@drawable/option_card"
            android:gravity="center">

            <ImageView android:src="@android:drawable/ic_menu_info_details" android:layout_width="48dp" android:layout_height="48dp"/>
            <TextView android:text="@string/opt_medical_history" android:layout_marginTop="8dp" android:layout_height="wrap_content" android:layout_width="match_parent"/>
        </LinearLayout>

        <LinearLayout android:id="@+id/btnAddImages"
            android:orientation="vertical"
            android:layout_margin="8dp"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="140dp"
            android:background="@drawable/option_card"
            android:gravity="center">

            <ImageView android:src="@android:drawable/ic_menu_camera" android:layout_width="48dp" android:layout_height="48dp"/>
            <TextView android:text="@string/opt_add_images" android:layout_marginTop="8dp" android:layout_height="wrap_content" android:layout_width="match_parent"/>
        </LinearLayout>

        <!-- second row -->
        <LinearLayout android:id="@+id/btnMonitorActivity"
            android:orientation="vertical"
            android:layout_margin="8dp"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="140dp"
            android:background="@drawable/option_card"
            android:gravity="center">

            <ImageView android:src="@android:drawable/ic_menu_compass" android:layout_width="48dp" android:layout_height="48dp"/>
            <TextView android:text="@string/opt_monitor_activity" android:layout_marginTop="8dp" android:layout_height="wrap_content" android:layout_width="match_parent"/>
        </LinearLayout>

        <LinearLayout android:id="@+id/btnHealthTips"
            android:orientation="vertical"
            android:layout_margin="8dp"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="140dp"
            android:background="@drawable/option_card"
            android:gravity="center">

            <ImageView android:src="@android:drawable/ic_menu_info_details" android:layout_width="48dp" android:layout_height="48dp"/>
            <TextView android:text="@string/opt_health_tips" android:layout_marginTop="8dp" android:layout_height="wrap_content" android:layout_width="match_parent"/>
        </LinearLayout>

        <LinearLayout android:id="@+id/btnChatHistory"
            android:orientation="vertical"
            android:layout_margin="8dp"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="140dp"
            android:background="@drawable/option_card"
            android:gravity="center">

            <ImageView android:src="@android:drawable/ic_menu_send" android:layout_width="48dp" android:layout_height="48dp"/>
            <TextView android:text="@string/opt_chat_history" android:layout_marginTop="8dp" android:layout_height="wrap_content" android:layout_width="match_parent"/>
        </LinearLayout>

        <LinearLayout android:id="@+id/btnCallHistory"
            android:orientation="vertical"
            android:layout_margin="8dp"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="140dp"
            android:background="@drawable/option_card"
            android:gravity="center">

            <ImageView android:src="@android:drawable/ic_menu_call" android:layout_width="48dp" android:layout_height="48dp"/>
            <TextView android:text="@string/opt_call_history" android:layout_marginTop="8dp" android:layout_height="wrap_content" android:layout_width="match_parent"/>
        </LinearLayout>

    </GridLayout>

    <!-- Bottom navigation (simple) -->
    <LinearLayout
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@color/white"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="72dp">

        <ImageButton android:src="@android:drawable/ic_menu_search" android:background="@null" android:layout_margin="8dp" android:layout_height="wrap_content" android:layout_width="match_parent"/>
        <ImageButton android:src="@android:drawable/ic_menu_view" android:background="@null" android:layout_margin="8dp" android:layout_height="wrap_content" android:layout_width="match_parent"/>
        <ImageButton android:src="@android:drawable/ic_menu_info_details" android:background="@null" android:layout_margin="8dp" android:layout_height="wrap_content" android:layout_width="match_parent"/>

    </LinearLayout>

</FrameLayout>
